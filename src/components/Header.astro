---
import Nav from './Nav.tsx'
import Socials from './Socials.astro';

export interface Props {
	name: string;
	title: string;
}

const { name, title } = Astro.props;
---

<header class="lg:sticky lg:top-0 lg:flex lg:max-h-screen lg:w-1/2 lg:flex-col lg:justify-between lg:py-24 md:pt-10 md:pb-32 pb-28">
        <div>
            <div>
                <h1 class="text-white font-bold lg:text-6xl text-5xl lg:animate-slide-in-right">{name}</h1>
                <h3 class="text-white font-bold lg:text-2xl text-xl mt-4 lg:animate-slide-in-left">{title}</h3>
            </div>
            <Nav client:load/>
        </div>
        <Socials />
</header>